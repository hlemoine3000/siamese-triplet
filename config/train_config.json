{
  "name": "config",
  "version": "1.0.0",

  "dataset": {
    "train_name": "vggface2",
    "train_dir": "/export/livia/data/lemoineh/vggface2/train_182",
    "test_name": ["lfw"],
    "test_dir": ["/export/livia/data/lemoineh/lfw/lfw_mtcnnpy_160",
      "/export/livia/data/lemoineh/vggface2/test_182"],
    "pairs_file": ["dataset_utils/pair_files/new_lfw_pairs.txt",
      "dataset_utils/pair_files/vggface2_pairs.txt"],

    "is_s2v_dataset": true,
    "s2v_dataset": {
      "names": ["video2"],
      "still_dir": "/export/livia/data/lemoineh/COX-S2V/COX-S2V-Still-MTCNN160",
      "video_dir": ["/export/livia/data/lemoineh/COX-S2V/COX-S2V-Video-MTCNN160/video2"],
      "pairs_file": ["dataset_utils/pair_files/cox_pairs_video2.txt"]
    },

    "cross_validation": {
      "num_fold": 10,
      "num_train_folds": 2,
      "num_val_folds": 1
    }
  },

  "output": {
    "output_dir": "/export/livia/data/lemoineh/torch_facetripletloss/models",
    "save_interval": 10
  },

  "model": {
    "model_arch": "resnet101",
    "pretrained_imagenet": true,
    "pretrained": false,
    "checkpoint_path": "",
    "embedding_size": 128
  },

  "hyperparameters": {
    "margin": 0.2,
    "n_epochs": 1000,
    "image_size": 160,
    "images_per_person": 5,
    "people_per_batch": 20,

    "optimizer": "SGD",
    "learning_rate": 0.05,
    "learning_rate_decay_epochs": 4,
    "learning_rate_decay_factor": 0.98,
    "weight_decay": 2e-4,
    "moving_average_decay": 0.9999,

    "triplet_swap": true,
    "random_crop": false,
    "random_flip": false
  },

  "visdom": {
    "environment_name": "Triplet Loss Plots5",
    "log_interval": 50
  }

}
